@model Project2.Models.EmpClass
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
<style>
    .error {
        color: #ff0000;
    }
</style>

@using (Html.BeginForm("Add", "Crud", FormMethod.Post))
{
    @Html.HiddenFor(m => m.id)

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", @placeholder = "enter your name", @required = "required" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
    </div>
    <br />
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", placeholder = "enter your email", @required = "required" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
    </div>
    <br />
    <div class="form-group">
        <label>Mobile</label>
        @Html.TextBoxFor(m => m.Mobile, "", new { @class = "form-control", @placeholder = "enter your mobile no", @required = "required" })
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "error" })
    </div>
    <br />
    <div class="form-group">
        <label>Company</label>
        @Html.TextBoxFor(m => m.Company, "", new { @class = "form-control", @placeholder = "enter your company name", @required = "required" })
        @Html.ValidationMessageFor(m => m.Company, "", new { @class = "error" })
    </div>
    <br />
    <div class="form-group">
        <label>Dept</label>
        @Html.TextBoxFor(m => m.Dept, "", new { @class = "form-control", @placeholder = "enter your department name", @required = "required" })
        @Html.ValidationMessageFor(m => m.Dept, "", new { @class = "error" })
    </div>
    <br />
    <div class="form-group">
        <label>Salary</label>
        @Html.TextBoxFor(m => m.Salary, "", new { @class = "form-control", @placeholder = "enter your salary", @required = "required" })
        @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "error" })

    </div>

    if (@ViewBag.edit == "Edit")
    {
        <button type="submit">Update</button>
        <button type="reset" class="btn btn-danger">Reset</button>
    }
    else
    {
        <button type="submit">Add</button>
     
    }

    <div>
        @Html.ActionLink("click to login", "Login")
    </div>

}
