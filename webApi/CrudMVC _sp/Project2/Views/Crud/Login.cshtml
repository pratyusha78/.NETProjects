@model Project2.Models.LoginClass
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<style>
    .error{
        color:#ff0000;
    }
</style>

@using (Html.BeginForm("Login", "Crud", FormMethod.Post))
{
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @placeholder = "Enter the email" })
        @Html.ValidationMessageFor(a => a.Email,"", new { @class = "error" })
        <span class="error">@TempData["InvalidEmail"]</span>
    </div>
   
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "Enter the Password" })
        @Html.ValidationMessageFor(a => a.Password,"", new { @class = "error" })
        <span class="error">@TempData["InvalidPassword"]</span>
    </div>
   
    <button class="btn btn-primary" type="submit">Login</button>
    <div>@Html.ActionLink("click to signup","SignUp")</div>
}